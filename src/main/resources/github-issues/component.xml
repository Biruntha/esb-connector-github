<component name="github-issues" type="synapse/template">
	<subComponents>
		<component name="listRepositoryIssues">
			<file>listRepositoryIssues.xml</file>
			<description>Lists issues for a repository</description>
		</component>
		<component name="getIssue">
			<file>getIssue.xml</file>
			<description>Retrieves a single issue</description>
		</component>
		<component name="createIssue">
			<file>createIssue.xml</file>
			<description>Any user with pull access to a repository can create an
				issue</description>
		</component>
		<component name="editIssue">
			<file>editIssue.xml</file>
			<description>Issue owners and users with push access can edit an
				issue</description>
		</component>
		<component name="listIssueComments">
			<file>listIssueComments.xml</file>
			<description>This lists comments on an issue</description>
		</component>
		<component name="createIssueComment">
			<file>createIssueComment.xml</file>
			<description>Allows to create a comment on an issue</description>
		</component>
	</subComponents>
</component>